################################################################
# Makefile for HMMER testsuite
# CVS $Id$
##########
# @LICENSE@
###########

CC        = @CC@
CFLAGS    = @CFLAGS@
CPPFLAGS  = @CPPFLAGS@
LDFLAGS   = @LDFLAGS@
DEFS      = @DEFS@
LIBS      = @LIBS@ -lm
MYLIBS    = -lhmmer -lsquid

# Configuration for optional pthreads multiprocessor support
#
PTHREAD_LIBS   = @PTHREAD_LIBS@
PTHREAD_CFLAGS = @PTHREAD_CFLAGS@

SHELL     = /bin/sh

SHIVA = alignalign_test\
	evd_test\
	masks_test\
	parsingviterbi_test\
	tophits_test\
	trace_test\
	viterbi_exercise\
	weeviterbi_test


# Configuration for customized implementations
#
HMMERMODE ?= FAST

ifeq "$(HMMERMODE)" 'FAST'
DEFS += -DFAST
OBJS += defaultstructs.o default_altivec_sharedfuncs.o fastfuncs.o
endif

ifeq "$(HMMERMODE)" 'SLOW'
DEFS += -DSLOW
OBJS += defaultstructs.o default_altivec_sharedfuncs.o slowfuncs.o
endif

ifeq "$(HMMERMODE)" 'ALTIVEC'
DEFS += -DALTIVEC
OBJS += altivecstructs.o default_altivec_sharedfuncs.o altivecfuncs.o
endif

ifeq "$(HMMERMODE)" 'LOCAL'
DEFS += -DLOCAL
OBJS += localstructs.o localfuncs.o
endif

#######
## Targets defining how to make Shiva executables.
#######

.c.o:
	$(CC) $(CFLAGS) $(PTHREAD_CFLAGS) ${CPPFLAGS} $(DEFS) -I../squid -I../src -c $<		

all: 	$(SHIVA)

$(SHIVA): @EXEC_DEPENDENCY@
	$(CC) $(CFLAGS) $(PTHREAD_CFLAGS) ${LDFLAGS} $(DEFS) -o $@ -L../squid -L../src $@.o $(MYLIBS) $(PTHREAD_LIBS) $(LIBS)

#######
## `make check` actually runs the tests.
#######

check: 
	@echo 
	@echo Running test suite exercises.
	@echo Warning: some tests may take several minutes to complete. 
	@echo 
	./sqc 2 exercises.sqc . ../src


#######
## Miscellaneous
#######

clean:
	-rm -f *.o *~ Makefile.bak core $(SHIVA) TAGS gmon.out

distclean:
	make clean
	-rm -f Makefile

binclean:
	-rm -f *.o *~ Makefile.bak core TAGS gmon.out

TAGS:
	etags -t *.c *.h Makefile.in


